@import "normalize.styl"

@font-face
  font-family 'Varela Round'
  font-style normal
  font-weight 400
  src: local('Varela Round'), local('VarelaRound-Regular'), url(http://fonts.gstatic.com/s/varelaround/v6/APH4jr0uSos5wiut5cpjrnhCUOGz7vYGh680lGh-uXM.woff) format('woff')


gris_oscuro = #333
gris_claro = #818181

a
  text-decoration none
body
  font-family 'Varela Round'
  font-size 16px

.author
  color gris_claro

.buttom-menu
  margin-top -10px
  position absolute
  left 0.5em
  top 50%

.container
  padding 1.4rem
  font-size 0px
  text-align center

.header
  border-bottom 1px solid gris_claro
  height 3.5em
  position relative
  // a
  //   display none
  .title
    font-size 1.1em
    line-height 3.5em
    margin 0
    text-align center

.menu
  display none

.name
  color gris_oscuro

.picture
  margin 0
  width 100%

.picture img
  width 100%

.song
  display inline-block
  font-size 1rem
  margin-right 1rem
  margin-bottom 1rem
  text-align left
  width 8rem
  &:nth-child(even)
    margin-right 0
  p
    margin 0.5em 0
